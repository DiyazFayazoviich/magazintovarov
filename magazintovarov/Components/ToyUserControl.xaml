<UserControl x:Class="magazintovarov.Components.ToyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:magazintovarov.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="231*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="71*"/>
            
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Margin="5" Source="/Resources/televizor.jpg"></Image>
        <TextBlock  Grid.Row="1">Телевизор Самсунг</TextBlock>
       
        <TextBlock Grid.Row="2">★ 4.1 41 отзыв</TextBlock>
        <TextBlock Grid.Row="3">199.990₽</TextBlock>
        <TextBlock VerticalAlignment="Bottom" TextDecorations="Strikethrough" Grid.Row="3">399.990₽</TextBlock>
        <StackPanel Orientation="Horizontal" Grid.Row="4">
            <Button x:Name="EditBtn" Background="#FFEC6F6F">🗑</Button>
            <Button x:Name="DeleteBtn">❤</Button>
            <Button >Рейтинг</Button>
        </StackPanel>
    </Grid>
</UserControl>
